{
  "name": "familiar-gm-assistant",
  "version": "1.0.0",
  "description": "AI-powered Game Master assistant for Foundry VTT with Queen-Princess-Drone architecture",
  "main": "src/api-server.js",
  "scripts": {
    "start": "node src/api-server.js",
    "dev": "nodemon src/api-server.js",
    "build": "npm run build:client && npm run build:server",
    "build:production": "npm run build && npm run optimize",
    "build:client": "webpack --mode production",
    "build:server": "node scripts/build-server.js",
    "optimize": "node scripts/optimize-assets.js",

    "test": "jest",
    "test:unit": "jest tests/unit/",
    "test:integration": "jest tests/integration/",
    "test:e2e": "jest tests/e2e/",
    "test:smoke-production": "jest tests/smoke/",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",

    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "typecheck": "jsdoc -t templates/haruki -d docs/api/ -r src/",
    "security-scan": "npm audit --audit-level moderate",

    "performance:benchmark": "node tests/performance/benchmark.js",
    "performance:production-validate": "node tests/performance/production-validation.js",
    "health:production-check": "node scripts/health-check.js",

    "package:foundry-module": "node scripts/package-foundry-module.js",
    "deploy:foundry": "node scripts/deploy-foundry.js",
    "deploy:api-server": "node scripts/deploy-api-server.js",
    "deploy:docs": "node scripts/deploy-documentation.js",

    "queen:development-fixes": "node QueenDebugOrchestrator.js --domain development --mode auto-fix",
    "queen:quality-fixes": "node QueenDebugOrchestrator.js --domain quality --mode theater-elimination",
    "queen:coordination-fixes": "node QueenDebugOrchestrator.js --domain coordination --mode workflow-implementation",

    "analyzer:theater-detection": "python comprehensive_analysis_engine.py --mode theater-detection",
    "analyzer:production-assessment": "python comprehensive_analysis_engine.py --mode production-assessment",
    "analyzer:quality-scan": "python comprehensive_analysis_engine.py --mode quality-scan"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "neo4j-driver": "^5.13.0",
    "openai": "^4.12.4",
    "axios": "^1.5.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "rate-limiter-flexible": "^3.0.0",
    "dotenv": "^16.3.1",
    "joi": "^17.10.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1",
    "eslint": "^8.49.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "jsdoc": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/risk-dashboard/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/familiar-gm-assistant.git"
  },
  "keywords": [
    "foundry-vtt",
    "pathfinder-2e",
    "ai-assistant",
    "game-master",
    "rpg",
    "graphrag",
    "neo4j",
    "queen-princess-drone",
    "theater-detection"
  ],
  "author": "Queen-Princess-Drone Development Hierarchy",
  "license": "MIT"
}