# Familiar RAG System Environment Configuration

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Pinecone Configuration (Vector Database)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=pathfinder-2e-rules

# Neo4j Configuration (Graph Database)
NEO4J_URI=neo4j://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# Redis Configuration (Caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# Alternative AI Providers (for cost optimization)
GEMINI_API_KEY=your_gemini_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here

# System Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Cost Management
SESSION_COST_LIMIT=0.015
ENABLE_COST_TRACKING=true
ENABLE_CACHING=true

# Archives of Nethys Settings
NETHYS_RATE_LIMIT=2
NETHYS_CACHE_EXPIRY=3600000

# Security
API_KEY=your_internal_api_key_here
CORS_ORIGIN=http://localhost:3000

# Performance
MAX_CONCURRENT_QUERIES=5
QUERY_TIMEOUT=30000
CACHE_TTL=1800

# Feature Flags
ENABLE_GRAPH_RAG=true
ENABLE_VECTOR_RAG=true
ENABLE_HYBRID_MODE=true
ENABLE_MULTI_HOP=true
ENABLE_CONTEXT_ENRICHMENT=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECK=true