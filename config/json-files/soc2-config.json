{
  "framework": "SOC2",
  "version": "Type II",
  "compliance_threshold": 0.95,
  "audit_settings": {
    "evidence_collection": true,
    "cryptographic_integrity": true,
    "retention_days": 2557
  },
  "trust_criteria": {
    "CC1": {
      "name": "Control Environment",
      "weight": 0.15,
      "required_controls": [
        "governance_documentation",
        "code_of_conduct",
        "security_policies",
        "organizational_structure",
        "training_records"
      ]
    },
    "CC2": {
      "name": "Communication and Information",
      "weight": 0.10,
      "required_controls": [
        "incident_response_procedures",
        "communication_policies",
        "change_notification_system",
        "user_communication_channels"
      ]
    },
    "CC3": {
      "name": "Risk Assessment",
      "weight": 0.15,
      "required_controls": [
        "risk_assessment_documentation",
        "threat_modeling",
        "business_continuity_plan"
      ]
    },
    "CC4": {
      "name": "Monitoring Activities",
      "weight": 0.10,
      "required_controls": [
        "monitoring_configuration",
        "log_retention_policies",
        "audit_trails",
        "alerting_systems"
      ]
    },
    "CC5": {
      "name": "Control Activities",
      "weight": 0.15,
      "required_controls": [
        "automated_testing",
        "code_review_process",
        "deployment_controls",
        "data_validation_controls",
        "error_handling",
        "backup_procedures"
      ]
    },
    "CC6": {
      "name": "Logical and Physical Access Controls",
      "weight": 0.20,
      "required_controls": [
        "authentication_system",
        "authorization_controls",
        "session_management",
        "encryption_configuration",
        "access_logging",
        "password_policies",
        "multi_factor_authentication"
      ]
    },
    "CC7": {
      "name": "System Operations",
      "weight": 0.10,
      "required_controls": [
        "capacity_management",
        "availability_monitoring",
        "performance_monitoring",
        "data_processing_integrity",
        "configuration_management"
      ]
    },
    "CC8": {
      "name": "Change Management",
      "weight": 0.05,
      "required_controls": [
        "change_control_process",
        "version_control",
        "automated_testing_cicd",
        "rollback_procedures"
      ]
    }
  },
  "reporting": {
    "formats": ["json", "markdown", "pdf"],
    "include_evidence_summary": true,
    "include_recommendations": true,
    "generate_executive_summary": true
  },
  "remediation": {
    "auto_generate_recommendations": true,
    "priority_mapping": {
      "critical": "score < 0.5",
      "high": "score < 0.8",
      "medium": "score < 0.95",
      "low": "score >= 0.95"
    }
  }
}